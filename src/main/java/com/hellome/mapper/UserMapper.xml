<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hellome.dao.IUserDao">

	<!-- 数据库和Model的关系配置 -->
	<resultMap id="BaseResultMap" type="com.hellome.model.User">
		<id column="id" property="id" jdbcType="VARCHAR" />
		<result column="user_name" property="userName" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
		<result column="phone_number" property="phoneNumber" jdbcType="VARCHAR" />
		<result column="head_url" property="headUrl" jdbcType="VARCHAR" />
		<result column="age" property="age" jdbcType="INTEGER" />
		<result column="address" property="address" jdbcType="VARCHAR" />
		<result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
		<result column="update_date" property="updateDate" jdbcType="TIMESTAMP" />
	</resultMap>

	<!-- 查询的具体列 -->
	<sql id="Base_Column_List">
		id,user_name, password,
		phone_number,head_url,age,address,create_date,update_date
	</sql>

	<!-- 根据ID查询对象 -->
	<select id="selectUserById" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select * from user where id = #{id}
	</select>

	<!-- 根据手机号查询对象 -->
	<select id="selectUserByPhone" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select * from user where phone_number = #{phoneNumber}
	</select>

	<!-- 根据主键删除基础列 -->
	<delete id="deleteById" parameterType="java.lang.String">
		delete from user
		where id =
		#{id,jdbcType=VARCHAR}
	</delete>

	<!-- 插入一条数据 -->
	<insert id="insertUser" parameterType="com.hellome.model.User">
		insert into user (
		<include refid="Base_Column_List" />
		)
		values
		(#{id,jdbcType=VARCHAR},#{userName,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR},
		#{phoneNumber,jdbcType=VARCHAR},#{headUrl,jdbcType=VARCHAR},#{age,jdbcType=INTEGER},
		#{address,jdbcType=VARCHAR},#{createDate,jdbcType=TIMESTAMP},#{updateDate,jdbcType=TIMESTAMP})
	</insert>

	<!-- 通过主键修改一条数据 -->
	<update id="updateById" parameterType="com.hellome.model.User">
		update user set
		user_name =
		#{userName,jdbcType=VARCHAR},
		password =
		#{password,jdbcType=VARCHAR},
		phone_number =
		#{phoneNumber,jdbcType=VARCHAR},
		head_url =
		#{headUrl,jdbcType=VARCHAR},
		age =
		#{age,jdbcType=INTEGER},
		address
		=
		#{address,jdbcType=VARCHAR},
		create_date
		=
		#{createDate,jdbcType=VARCHAR},
		update_date
		=
		#{updateDate,jdbcType=VARCHAR}
		where id
		=
		#{id,jdbcType=VARCHAR}
	</update>

</mapper>